<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MangaVerse.Views.HomePage">

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Contenido de menú" />

            <!-- Agregar el CarouselView aquí con un tamaño absoluto -->
            <CarouselView WidthRequest="300" HeightRequest="200">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <!-- Agregar una imagen al carrusel -->
                        <Image Source="{Binding}" Aspect="AspectFill" />
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
